<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="bibliotecaPU">
        <class>org.primeiroprojetocursooo.projetobancodedados2biblioteca.entity.Categoria</class>
        <class>org.primeiroprojetocursooo.projetobancodedados2biblioteca.entity.Livro</class>
        <class>org.primeiroprojetocursooo.projetobancodedados2biblioteca.entity.Usuario</class>
        <class>org.primeiroprojetocursooo.projetobancodedados2biblioteca.entity.Locacao</class>
        <class>org.primeiroprojetocursooo.projetobancodedados2biblioteca.entity.Pagamento</class>
        <properties>
            <!-- Conexão com PostgreSQL -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/biblioteca"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="senha"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Dialeto e configurações do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
